{
  "name": "watch-collector",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npx react-native start",
    "android": "npx react-native run-android",
    "ios": "npx react-native run-ios",
    "web": "webpack serve --config web/webpack.config.js",
    "lint": "eslint . --config eslint.config.js",
    "lint:fix": "eslint . --fix --config eslint.config.js",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace WatchCollector.xcworkspace -scheme WatchCollector -configuration Release archive -archivePath ../build/WatchCollector.xcarchive",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "supabase status",
    "db:apply": "bash scripts/db_apply.sh",
    "db:push": "supabase db push",
    "db:seed": "supabase db seed --file supabase/seed/seed_badges_and_tags.sql",
    "db:migrate": "supabase db push",
    "functions:deploy": "supabase functions deploy",
    "db:apply:full": "bash scripts/db_apply.sh && supabase functions deploy price-comparator && supabase functions deploy auction-calendar && supabase functions deploy investment-sim && supabase functions deploy collection-score && supabase functions deploy widget-highlight",
    "deploy:functions": "bash scripts/supabase_deploy_all.sh",
    "deploy:all": "bash scripts/supabase_deploy_all.sh",
    "scan:policies": "bash scripts/scan_policies.sh",
    "fix:policies": "node scripts/patch_policies.mjs",
    "fix:policies:write": "node scripts/patch_policies.mjs --write",
    "db:reconcile": "bash scripts/reconcile_remote.sh",
    "ios:pods": "cd ios && bundle exec pod install",
    "ios:bump": "bundle exec fastlane ios bump_build",
    "ios:build": "bundle exec fastlane ios build",
    "ios:upload": "bundle exec fastlane ios upload_testflight",
    "ios:release": "bundle exec fastlane ios release",
    "web:build": "webpack --config web/webpack.config.js --mode production",
    "web:full": "cross-env WEB_PREVIEW_BANNER=0 WEB_USE_MOCK=1 webpack serve --config web/webpack.config.js",
    "web:clean": "cross-env WEB_PREVIEW_BANNER=0 WEB_USE_MOCK=0 webpack serve --config web/webpack.config.js"
  },
  "dependencies": {
    "@react-native/assets-registry": "^0.80.2",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "@shopify/flash-list": "^1.6.3",
    "@supabase/supabase-js": "^2.39.3",
    "react-native-fs": "^2.20.0",
    "react-native-image-picker": "^7.1.0",
    "react-native-keychain": "^8.1.3",
    "react-native-share": "^10.0.2",
    "i18next": "^23.7.16",
    "metro": "^0.82.5",
    "metro-cache": "^0.82.5",
    "nativewind": "^2.0.11",
    "posthog-react-native": "^3.4.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.49.3",
    "react-i18next": "^14.0.1",
    "react-native": "0.73.6",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-web": "0.19.13",
    "tailwindcss": "^3.4.1",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/runtime": "^7.28.3",
    "@react-native/eslint-config": "^0.73.2",
    "@react-native/metro-config": "^0.73.5",
    "@react-native/typescript-config": "^0.73.1",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.2.45",
    "@types/react-native": "~0.73.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "ajv": "^8.17.1",
    "babel-loader": "^9.2.1",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "html-webpack-plugin": "^5.6.4",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "~5.3.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "private": true
}
