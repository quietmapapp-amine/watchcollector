default_platform(:ios)

platform :ios do
  before_all do
    UI.important("Starting iOS pipeline for WatchCollector")
  end

  desc "Install CocoaPods"
  lane :pods do
    cocoapods(
      clean_install: true,
      repo_update: true,
      silent: false
    )
  end

  desc "Bump build number (CURRENT_PROJECT_VERSION) automatically"
  lane :bump_build do
    ensure_xcode_version
    increment_build_number(
      xcodeproj: ENV["XCODEPROJ_PATH"],
      build_number: Time.now.strftime("%Y%m%d%H%M")
    )
  end

  desc "Build .ipa for App Store/TestFlight"
  lane :build do |options|
    scheme = options[:scheme] || ENV["SCHEME"] || "WatchCollector"
    workspace = ENV["XCWORKSPACE_PATH"]
    project = ENV["XCODEPROJ_PATH"]

    gym(
      scheme: scheme,
      workspace: workspace,
      project: project,
      export_method: "app-store",
      include_bitcode: false,
      include_symbols: true,
      clean: true,
      output_directory: "build",
      output_name: "WatchCollector.ipa",
      configuration: "Release",
      silent: false
    )
  end

  desc "Upload build to TestFlight using App Store Connect API key"
  lane :upload_testflight do
    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_filepath: ENV["ASC_KEY_FILE"],
      duration: 1200,
      in_house: false
    )

    pilot(
      api_key: api_key,
      skip_waiting_for_build_processing: false,
      distribute_external: false,   # set true if you want external testers
      changelog: ENV["TF_CHANGELOG"] || "Initial TestFlight build"
    )
  end

  desc "Full pipeline: pods -> bump_build -> build -> upload_testflight"
  lane :release do
    pods
    bump_build
    build
    upload_testflight
  end
end
